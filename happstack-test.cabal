name:                happstack-test
version:             0.1.0.0        
license:             GPL-3
license-file:        LICENSE
author:              Viktor Befort, Alex Befort
maintainer:          v.befort@googlemail.com          
category:            Web
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

executable happstack-test
  main-is:             AppMain.hs
  build-depends:       base >=4.9 && <4.10,
                       text == 1.2.*,
                       mtl,
                       acid-state == 0.14.*,
                       safecopy == 0.9.*,
                       happstack-server == 7.4.*,
                       web-routes,
                       web-routes-th,
                       web-routes-happstack,
                       hsp,
                       ixset == 1.0.*
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite hspec
  build-depends:       base >=4.9 && <4.10,
                       hspec == 2.2.*
  default-language:    Haskell2010
  hs-source-dirs:      testsuite
  main-is:             Spec.hs
  type:                exitcode-stdio-1.0